    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_DEBUG": "1",
                "FLASK_APP": "${workspaceFolder}/src/gpxtr/wsgi.py"
            },
            "args": [
                "run", "--no-debugger", "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true,
        },
        {
            "name": "Python Debugger: CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/gpxtr/cli.py",
            "console": "integratedTerminal",
            "xargs": ["--depart", "06/15/2024 09:15:00am", "--ignore", "/Users/pst/gpxtr/testdata/scenic2.gpx"],
            "args": ["--depart", "07/27/2023 09:15:00am", "/Users/pst/gpxtr/testdata/basecamp.gpx"]
        }
    ]
}